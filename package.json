{
  "name": "screenrecorder",
  "version": "1.3.0",
  "description": "A screen recorder application with audio capture",
  "main": "main.js",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "screen-recorder",
    "electron",
    "video"
  ],
  "author": "Belinda Hagen",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.belindahagen.screenrecorder",
    "productName": "Screen Recorder",
    "artifactName": "ScreenRecorder-${version}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "selection.html",
      "package.json",
      "icon.png"
    ],
    "win": {
      "target": [
        "portable"
      ],
      "icon": "build/icons/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "icon.png"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "electron-icon-builder": "^2.0.1",
    "png-to-ico": "^3.0.1",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "ffmpeg-static": "^5.3.0"
  }
}
